[Unit]
Description={{ service_identifier }}

[Service]
User={{ service_identifier }}
Group={{ service_identifier }}
WorkingDirectory={{ ampd_home_dir }}
ExecStart={{ ampd_bin_dir }}/{{ service_identifier }} daemon --config {{ ampd_config_file_path }}
Restart=always
RestartSec=4
LimitNOFILE=65536
MemoryMax=64G
StandardOutput=append:{{ ampd_log_file_path }}
StandardError=inherit

[Install]
WantedBy=multi-user.target